<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_title" />

        <EditText
            android:id="@+id/input_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_enter_message" />

        <CheckBox
            android:id="@+id/checkbox_send_title"
            style = "@style/checkboxStyle"
            android:text="@string/send_title"
             />

        <Button
            android:id="@+id/button_send_mail"
            style="@style/ButtonStyle"
            android:text="@string/send_email"
            android:onClick="sendEmail"
            />

        <Button
            android:id="@+id/button_launch_activity"
            style="@style/ButtonStyle"
            android:text="@string/launch_activity"
            android:onClick="launchActivity"/>

        <Button
            android:id="@+id/button_launch_camera"
            style="@style/ButtonStyle"
            android:text="@string/launch_camera"
            android:onClick="launchCamera"/>


    </LinearLayout>

</ScrollView>
